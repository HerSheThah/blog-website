<%- include('partials/header') %>

<body class="post">
  <!-- ================main heading================ -->
  <div class="main edit_page">
    <h1 class="custom_heading">EDIT YOUR BLOG HERE</h1>
    <!-- ================form title and body================ -->
    <div class="form-group">
      <form class="editform" action="/edit/:<%=id %>" method="post">
        <label for="toeditTitle" class="form_heading" style="color:#3D474D">Title</label><br>
        <input type="text" name="toeditTitle" id="inputdefault" style="color:black" class="form-control form_input" autocomplete="off" value="<%=title%>" autofocus><br>
        <label for="toeditBody">Body</label><br><br>
        <input type="hidden" name="postid" value="<%=id%>">
        <textarea class="form-control form_input" rows="13" id="comment" name="toeditBody" style="color:#3D474D" value="<%=desc%>"><%=desc%></textarea><br><br>
        <!-- ================custom publish button================ -->
        <div class="compose_wrap">
          <button type="submit" name="button" class="">
            <span>Publish</span>
          </button>
        </div>
      </form>
    </div>
  </div>
  <!-- ================bootstrap javascript================ -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>
