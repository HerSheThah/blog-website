<%- include('partials/header') -%>

<body class="text-center">
  <main class="form-signin">
    <form action="/contact" method="post">
      <img class="mb-4" src="images/circle-cropped.png" alt="" width="80" height="70">
      <h1 class="h3 mb-3 fw-normal">Contact Me!</h1>
      <!-- ================main card================  -->
      <div class="form-floating">
        <input type="text" class="form-control first" placeholder="First Name" name="firstName" required style="color:black">
        <label for="floatingInput">Name</label>
      </div>
      <div class="form-floating">
        <input type="email" class="form-control last" placeholder="Email" name="email" required style="color:black">
        <label for="floatingPassword">Email</label>
      </div>
      <div class="form-floating">
        <input type="text" class="form-control middle" placeholder="Message" name="message" autocomplete="off">
        <label for="floatingPassword">Message</label>
      </div>
      <button class="w-100 btn btn-lg btn-color" type="submit">Send</button>
    </form>
  </main>
  <!-- ================bootstrap javascript================ -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>
